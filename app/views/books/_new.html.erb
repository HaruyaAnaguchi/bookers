<h2>New book</h2>

<% if @book.errors.any? %>
<div class="error-box">
  <div class="error-title">
    <p class="error-title-message"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
  </div>
  <div class="error-body">
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
</div>
